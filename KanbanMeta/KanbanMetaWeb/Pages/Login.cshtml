@page
@model KanbanMetaWeb.Pages.LoginModel
@{
    ViewBag.Title = "User Login";
}


<div class="row w-100 mt-3 justify-content-center">
    <h1>User Login</h1>
    @{
        if (Model.loginFailed)
        {
            <div class="alert alert-danger" role="alert">
                Inloggning misslyckad, kontrollera dina inloggningsuppgifter och försök igen.
            </div>
        }
    }
    <div class="d-flex justify-content-center w-100">
        <div class="col-sm-10 col-md-6 col-lg-4">
            <form method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="user.Email"></label>
                    <input asp-for="user.Email" class="form-control" />
                    @*<span asp-validation-for="user.Email" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="user.Password"></label>
                    <input asp-for="user.Password" class="form-control" />
                    @*<span asp-validation-for="user.Password" class="text-danger"></span>*@
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
